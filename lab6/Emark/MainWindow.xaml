<Window x:Class="Emark.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Emark"
             mc:Ignorable="d" 
             Height="400" Width="600" FontFamily="Courier New">
    <DockPanel>
        <Button DockPanel.Dock="Left" Click="Button_Click">Parse</Button>
        <TextBlock x:Name="Error" DockPanel.Dock="Bottom" Foreground="Red" />
        <TextBox x:Name="Program" AcceptsReturn="True" AcceptsTab="True" />
    </DockPanel>
</Window>
